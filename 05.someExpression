using System;
					
public class Program
{
	public static void Main()
	{
		  int n = int.Parse(Console.ReadLine());
		  int x = int.Parse(Console.ReadLine());
		  double xOnX =1;
		  int factorial = 1;
		  double sum = 1;
		  for (int i =1; i<=n; i++)
		  {
		  	factorial *=i;
			xOnX *=x;
			sum += (factorial/xOnX); 
		  }
		Console.WriteLine("{0:f5}",sum);
	}	
}
